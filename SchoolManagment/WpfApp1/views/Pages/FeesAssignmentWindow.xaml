<Window x:Class="School.views.Pages.FeesAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تعيين الرسوم الدراسية"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="850" Height="600"
        Background="#F4F6F9">

    <Window.Resources>
        <!-- ظل -->
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Black"/>

        <!-- ComboBox Style -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            
        </Style>

        <!-- TextBox -->
        <Style x:Key="BeautifulTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="BeautifulButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Text="🟢 تعيين الرسوم الدراسية للفصول الدراسية"
                   FontSize="22" FontWeight="Bold"
                   Foreground="#2E3A59"
                   HorizontalAlignment="Center" Margin="0 0 0 20"/>

        <!-- بطاقة الإدخال -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20"
                Effect="{StaticResource DropShadow}">
            <Grid Height="63" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- العام الدراسي -->
                <StackPanel Margin="5" Grid.Column="0">
                    <TextBlock Text="العام الدراسي:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="YearComboBox" Style="{StaticResource BeautifulComboBox}"
                              DisplayMemberPath="Name" SelectedValuePath="Id"/>
                </StackPanel>

                <StackPanel Margin="5" Grid.Column="1">
                    <TextBlock Text="أنواع الرسوم:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="FeesComboBox" Style="{StaticResource BeautifulComboBox}"
                    DisplayMemberPath="Name" SelectedValuePath="Id"/>
                </StackPanel>

                <!-- المرحلة الدراسية -->
                <StackPanel Margin="5" Grid.Column="2">
                    <TextBlock Text="المرحلة الدراسية:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="LevelComboBox" Style="{StaticResource BeautifulComboBox}"
                              DisplayMemberPath="Name" SelectedValuePath="Id"/>
                </StackPanel>

                <!-- الصف الدراسي -->
                <StackPanel Margin="5" Grid.Column="3">
                    <TextBlock Text="الصف الدراسي:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="ClassComboBox" Style="{StaticResource BeautifulComboBox}"
                              DisplayMemberPath="Name" SelectedValuePath="Id"/>
                </StackPanel>

                <!-- قيمة الرسوم -->
                <StackPanel Margin="5" Grid.Column="4">
                    <TextBlock Text="قيمة الرسوم (جنيه):" FontWeight="SemiBold"/>
                    <TextBox x:Name="FeeAmountTextBox" Style="{StaticResource BeautifulTextBox}"/>
                </StackPanel>

                
            </Grid>
        </Border>

        <!-- الجدول -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="15" 
                Effect="{StaticResource DropShadow}">
            <DataGrid x:Name="FeesDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F3F6FA"
                      RowHeight="35"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      FontSize="14"
                      BorderBrush="#E1E5EE">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="السنة الدراسية" Binding="{Binding AcademicYear}" Width="*"/>
                    <DataGridTextColumn Header="المرحلة الدراسية" Binding="{Binding LevelName}" Width="*"/>
                    <DataGridTextColumn Header="الصف الدراسي" Binding="{Binding ClassName}" Width="*"/>
                    <DataGridTextColumn Header="قيمة الرسوم (ج)" Binding="{Binding Amount}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- الأزرار -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
            <Button Content="📝 تعديل" Background="#2980B9" Style="{StaticResource BeautifulButton}" Click="EditFee_Click"/>
            <Button Content="🗑 حذف" Background="#C0392B" Style="{StaticResource BeautifulButton}" Click="DeleteFee_Click"/>
            <Button Content="❌ إغلاق" Background="#7F8C8D" Style="{StaticResource BeautifulButton}" Click="Close_Click"/>
            <!-- زر الحفظ -->
            <StackPanel Orientation="Horizontal" Grid.Column="5" VerticalAlignment="Bottom" Margin="10,0,0,0">
                <Button Content="💾 حفظ" Background="#27AE60" Style="{StaticResource BeautifulButton}"
            Click="SaveFee_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
