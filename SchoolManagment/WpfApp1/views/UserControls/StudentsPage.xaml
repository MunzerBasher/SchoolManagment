<UserControl x:Class="School.views.UserControls.StudentsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1100"
             Background="#F4F6F9" Loaded="UserControl_Loaded">

    <!--  موارد التنسيق -->
    <UserControl.Resources>

        <!-- ظل بسيط -->
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Black"/>

        <!-- TextBox -->
        <Style x:Key="BeautifulTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="Foreground" Value="#2E3A59"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- DatePicker -->
        <Style x:Key="BeautifulDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="BeautifulButtonGreen" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="BeautifulButtonBlue" TargetType="Button" BasedOn="{StaticResource BeautifulButtonGreen}">
            <Setter Property="Background" Value="#2980B9"/>
        </Style>

        <Style x:Key="BeautifulButtonRed" TargetType="Button" BasedOn="{StaticResource BeautifulButtonGreen}">
            <Setter Property="Background" Value="#C0392B"/>
        </Style>

        <Style x:Key="BeautifulButtonGray" TargetType="Button" BasedOn="{StaticResource BeautifulButtonGreen}">
            <Setter Property="Background" Value="#7F8C8D"/>
        </Style>

    </UserControl.Resources>

    <!-- 🧱 المحتوى -->
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🟦 العنوان -->
        <TextBlock Text="📚 إدارة الطلاب" FontSize="28" FontWeight="Bold" Foreground="#2E3A59" Margin="0,0,0,20"/>

        <!-- 🟩 منطقة الإدخال -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20" Effect="{DynamicResource DropShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- الحقول -->
                <UniformGrid Columns="4" Rows="3" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock Text="رقم الطالب:" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtStudentId" Style="{StaticResource BeautifulTextBox}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="الاسم الكامل:" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtFullName" Style="{StaticResource BeautifulTextBox}"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="الجنس:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cbGender" DisplayMemberPath="Name" SelectedValuePath="Id" Style="{StaticResource BeautifulComboBox}" SelectionChanged="cbGender_SelectionChanged">

                        </ComboBox>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="تاريخ الميلاد:" FontWeight="SemiBold"/>
                        <DatePicker x:Name="dpBirthDate" Style="{StaticResource BeautifulDatePicker}" SelectedDateChanged="dpBirthDate_SelectedDateChanged"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="المرحلة الدراسية:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cbStage" DisplayMemberPath="Name" SelectedValuePath="Id" Style="{StaticResource BeautifulComboBox}" SelectionChanged="cbStage_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="الصف الدراسي:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cbClass" DisplayMemberPath="Name" SelectedValuePath="Id" Style="{StaticResource BeautifulComboBox}" SelectionChanged="cbClass_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="الشعبة:" FontWeight="SemiBold"/>
                        <ComboBox x:Name="cbSection" DisplayMemberPath="Name" SelectedValuePath="Id" Style="{StaticResource BeautifulComboBox}" SelectionChanged="cbSection_SelectionChanged"/>
                    </StackPanel>
                    <StackPanel Margin="10">
                        <TextBlock Text="رقم ولي الأمر:" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtGuardianPhone" Style="{StaticResource BeautifulTextBox}"/>
                    </StackPanel>

                </UniformGrid>

                <!-- الأزرار -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,15,0,0">
                    <Button x:Name="Add" Content="إضافة" Style="{StaticResource BeautifulButtonGreen}" Margin="5" Click="Add_Click"/>
                    <Button Content="تعديل" Style="{StaticResource BeautifulButtonBlue}" Margin="5"/>
                    <Button Content="حذف" Style="{StaticResource BeautifulButtonRed}" Margin="5"/>
                    <Button Content="تحديث" Style="{StaticResource BeautifulButtonGray}" Margin="5" Click="Button_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- البحث + الجدول -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="339*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- البحث -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.ColumnSpan="2">
                <TextBlock Text="🔍 بحث بالاسم:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtSearch" Width="250" Height="30" Style="{StaticResource BeautifulTextBox}"/>
            </StackPanel>

            <!-- الجدول -->
            <DataGrid x:Name="dgStudents" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                      AlternatingRowBackground="#F3F6FA" RowHeight="35"
                      CanUserAddRows="False" SelectionMode="Single"
                      HeadersVisibility="Column" BorderThickness="1" BorderBrush="#E1E5EE" Grid.ColumnSpan="2">

                <!-- Context Menu -->
                <DataGrid.ContextMenu>
                    <ContextMenu Background="WhiteSmoke" 
                     BorderBrush="#2563EB" 
                     BorderThickness="1" 
                     FontSize="14"
                     FontWeight="SemiBold"
                     Padding="5">
                        <MenuItem Header="✏️ تعديل" Click="EditMenuItem_Click"
                     Background="White" Foreground="#1E293B"
                     Padding="5,2"/>
                        <MenuItem Header="🗑 حذف" Click="DeleteMenuItem_Click"
                      Background="White" Foreground="#DC2626"
                      Padding="5,2"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>

            </DataGrid>
        </Grid>

    </Grid>
</UserControl>
