<UserControl x:Class="School.views.UserControls.AcademicLevelsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F4F6F9"
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- ظل لجميع البلوكات -->
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Black"/>

        <!-- TextBox Style -->
        <Style x:Key="BeautifulTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E3A59"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="BeautifulButtonGreen" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="BeautifulButtonRed" TargetType="Button" BasedOn="{StaticResource BeautifulButtonGreen}">
            <Setter Property="Background" Value="#C0392B"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Text="🟢 إدارة المراحل الدراسية" FontSize="24" FontWeight="Bold" Foreground="#2E3A59" Margin="0,0,0,15" HorizontalAlignment="Left" Width="760"/>

        <!-- بطاقة الإدخال -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20" Effect="{StaticResource DropShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- العام الدراسي -->
                <StackPanel Margin="5">
                    <TextBlock Text="العام الدراسي:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="AcademicYearComboBox" Style="{StaticResource BeautifulComboBox}" DisplayMemberPath="Name" SelectedValuePath="Id" SelectionChanged="AcademicYearComboBox_SelectionChanged"/>
                </StackPanel>

                <!-- الفصل الدراسي -->
                <StackPanel Margin="5" Grid.Column="1">
                    <TextBlock Text="الفصل الدراسي:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="SemesterComboBox" Style="{StaticResource BeautifulComboBox}" DisplayMemberPath="Name" SelectedValuePath="Id" SelectionChanged="SemesterComboBox_SelectionChanged"/>
                </StackPanel>

                <!-- اسم المرحلة الدراسية -->
                <StackPanel Margin="5" Grid.Column="2">
                    <TextBlock Text="اسم المرحلة الدراسية:" FontWeight="SemiBold"/>
                    <TextBox x:Name="LevelNameTextBox" Style="{StaticResource BeautifulTextBox}"/>
                </StackPanel>

                <!-- الأزرار -->
                <StackPanel Orientation="Horizontal" Grid.Column="3" VerticalAlignment="Bottom" Margin="10,0,0,0">
                    <Button Content="حفظ" Style="{StaticResource BeautifulButtonGreen}" Margin="0,0,10,0" Click="SaveButton_Click"/>
                    <Button Content="مسح" Style="{StaticResource BeautifulButtonRed}" Click="ClearButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- البحث -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="بحث بالاسم:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="SearchTextBox" Width="250" Style="{StaticResource BeautifulTextBox}" TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

        <!-- الجدول -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="15" Margin="0,50,0,0" Effect="{StaticResource DropShadow}">
            <DataGrid x:Name="LevelsDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F3F6FA"
                      RowHeight="35"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      BorderBrush="#E1E5EE">
                <!-- Context Menu -->
                <DataGrid.ContextMenu>
                    <ContextMenu Background="WhiteSmoke" 
BorderBrush="#2563EB" 
BorderThickness="1" 
FontSize="14"
FontWeight="SemiBold"
Padding="5">
                        <MenuItem Header="✏️ تعديل" Click="EditMenuItem_Click"
 Background="White" Foreground="#1E293B"
 Padding="5,2"
/>
                        <MenuItem Header="🗑 حذف" Click="DeleteMenuItem_Click"
 Background="White" Foreground="#DC2626"
 Padding="5,2"
 />
                    </ContextMenu>
                </DataGrid.ContextMenu>

            </DataGrid>
        </Border>
    </Grid>
</UserControl>
