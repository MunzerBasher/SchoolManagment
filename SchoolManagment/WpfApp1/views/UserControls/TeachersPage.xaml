<UserControl x:Class="School.views.UserControls.TeachersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#f7f7f7">

    <UserControl.Resources>
        <!-- ComboBox -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <!-- ظل بسيط لجميع البلوكات -->
        <DropShadowEffect x:Key="DropShadow" ShadowDepth="2" BlurRadius="8" Color="#44000000"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- العنوان -->
            <RowDefinition Height="Auto"/>
            <!-- الإدخال -->
            <RowDefinition Height="Auto"/>
            <!-- البحث -->
            <RowDefinition Height="*"/>
            <!-- الجدول -->
        </Grid.RowDefinitions>

        <!-- 🔹 العنوان -->
        <TextBlock Text="إدارة المعلمين"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#1E293B"
                   Margin="0 0 0 15"/>

        <!-- 🔹 بطاقة الإدخال -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="15" Margin="0 0 0 20"
                Effect="{StaticResource DropShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- اسم المعلم -->
                <StackPanel Margin="5">
                    <TextBlock Text="اسم المعلم:" FontWeight="SemiBold" Foreground="#334155" Margin="0,0,0,5"/>
                    <TextBox x:Name="TeacherNameTextBox" Width="200" Height="30" Background="#F9FAFB" BorderBrush="#CBD5E1"/>
                </StackPanel>

            
                <!-- رقم الهاتف -->
                <StackPanel Margin="5" Grid.Column="1">
                    <TextBlock Text="رقم الهاتف:" FontWeight="SemiBold" Foreground="#334155" Margin="0,0,0,5"/>
                    <TextBox x:Name="PhoneTextBox" Width="200" Height="30" Background="#F9FAFB" BorderBrush="#CBD5E1"/>
                </StackPanel>

                <!-- المادة -->
                <StackPanel Margin="5" Grid.Column="2">
                    <TextBlock Text="المادة:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cbSection" DisplayMemberPath="Name" SelectedValuePath="Id" Style="{StaticResource BeautifulComboBox}" SelectionChanged="cbSection_SelectionChanged"/>
                </StackPanel>

                <!-- الأزرار -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Grid.Column="3" Margin="10,0,0,0">
                    <Button Content="حفظ" Width="90" Height="30" Margin="0 0 10 0"
                            Background="#2563EB" Foreground="White" BorderThickness="0" FontWeight="SemiBold"
                            Click="SaveButton_Click"/>
                    <Button Content="مسح" Width="90" Height="30"
                            Background="#DC2626" Foreground="White" BorderThickness="0" FontWeight="SemiBold"
                            Click="ClearButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🔹 البحث -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10" Margin="0 0 0 10"
                Effect="{StaticResource DropShadow}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="بحث بالاسم:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <TextBox x:Name="SearchTextBox" Width="250" Height="30" Background="#F9FAFB" BorderBrush="#CBD5E1"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>
        </Border>

        <!-- 🔹 جدول البيانات -->
        <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="15" Effect="{StaticResource DropShadow}">
            <DataGrid x:Name="TeachersDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      AlternatingRowBackground="#F1F5F9"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      FontSize="14"
                      RowHeight="35"
                      GridLinesVisibility="All"
                      BorderBrush="#E2E8F0" SelectionChanged="TeachersDataGrid_SelectionChanged" Loaded="TeachersDataGrid_Loaded">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2563EB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.Resources>
                <!-- قائمة النقر يمين -->
                <DataGrid.ContextMenu>
                    <ContextMenu Background="WhiteSmoke" 
                    BorderBrush="#2563EB" 
                    BorderThickness="1" 
                    FontSize="14"
                    FontWeight="SemiBold"
                    Padding="5">
                    <MenuItem Header="✏️ تعديل" Click="EditMenuItem_Click"
                     Background="White" Foreground="#1E293B"
                     Padding="5,2"
                    />
                                            <MenuItem Header="🗑 حذف" Click="DeleteMenuItem_Click"
                     Background="White" Foreground="#DC2626"
                     Padding="5,2"
                     />
                    </ContextMenu>
                </DataGrid.ContextMenu>

            </DataGrid>
        </Border>

    </Grid>
</UserControl>
