<UserControl x:Class="School.views.Pages.UserControls.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:School.views.Pages.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="700"
             d:DesignWidth="1100"
             Background="#F5F6FA">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <!-- العنوان -->
                <TextBlock Text="لوحة التحكم"
               FontSize="30"
               FontWeight="Bold"
               Foreground="#2E86DE"
               Margin="0,0,0,25"/>

                <!-- الكروت (إحصائيات سريعة) -->
                <UniformGrid Columns="4" Margin="0,0,0,30">

                    <Border Background="White" CornerRadius="12" Padding="20" Margin="10" Effect="{DynamicResource DropShadow}">
                        <StackPanel>
                            <TextBlock Text="عدد الطلاب" FontSize="18" FontWeight="Bold" Foreground="#2E86DE"/>
                            <TextBlock Text="1,200" FontSize="32" FontWeight="Bold" Foreground="#2C3E50" Margin="0,8,0,0"/>
                            <TextBlock Text="↑ 12% زيادة هذا الشهر" FontSize="12" Foreground="Green"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="20" Margin="10" Effect="{DynamicResource DropShadow}">
                        <StackPanel>
                            <TextBlock Text="عدد المعلمين" FontSize="18" FontWeight="Bold" Foreground="#2E86DE"/>
                            <TextBlock Text="85" FontSize="32" FontWeight="Bold" Foreground="#2C3E50" Margin="0,8,0,0"/>
                            <TextBlock Text="↑ 3% عن الشهر الماضي" FontSize="12" Foreground="Green"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="20" Margin="10" Effect="{DynamicResource DropShadow}">
                        <StackPanel>
                            <TextBlock Text="عدد الفصول" FontSize="18" FontWeight="Bold" Foreground="#2E86DE"/>
                            <TextBlock Text="40" FontSize="32" FontWeight="Bold" Foreground="#2C3E50" Margin="0,8,0,0"/>
                            <TextBlock Text="مستقر" FontSize="12" Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="20" Margin="10" Effect="{DynamicResource DropShadow}">
                        <StackPanel>
                            <TextBlock Text="إجمالي الرسوم" FontSize="18" FontWeight="Bold" Foreground="#2E86DE"/>
                            <TextBlock Text="$120,000" FontSize="32" FontWeight="Bold" Foreground="#2C3E50" Margin="0,8,0,0"/>
                            <TextBlock Text="↑ 5% عن الشهر الماضي" FontSize="12" Foreground="Green"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

                <!-- الرسوم البيانية والأنشطة -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Placeholder للرسم البياني -->
                    <Border Background="White" CornerRadius="12" Margin="10" Padding="20" Grid.Column="0" Effect="{DynamicResource DropShadow}">
                        <StackPanel>
                            <TextBlock Text="إحصائيات التسجيل الشهري" 
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2E86DE" Margin="0,0,0,15"/>
                            <Rectangle Height="200" Fill="#EAECEE" RadiusX="8" RadiusY="8" Stroke="#D5D8DC" StrokeThickness="1"/>
                            <TextBlock Text="(منطقة الرسم البياني)" HorizontalAlignment="Center" Foreground="Gray" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- آخر الأنشطة -->
                    <Border Background="White" CornerRadius="12" Margin="10" Padding="20" Grid.Column="1" Effect="{DynamicResource DropShadow}">
                        <StackPanel>
                            <TextBlock Text="آخر الأنشطة" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#2E86DE"
                           Margin="0,0,0,15"/>

                            <ListView BorderThickness="0">
                                <ListViewItem Content="تم تسجيل 25 طالب جديد في الصف الأول" />
                                <ListViewItem Content="تحديث بيانات الأستاذ محمد علي" />
                                <ListViewItem Content="إضافة فصل جديد (رابع ب)" />
                                <ListViewItem Content="تم دفع رسوم بقيمة 1200 دولار" />
                                <ListViewItem Content="رفع تقرير الأداء الشهري للمعلمين" />
                            </ListView>
                        </StackPanel>
                    </Border>

                </Grid>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>


