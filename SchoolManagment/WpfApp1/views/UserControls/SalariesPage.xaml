<UserControl x:Class="School.views.UserControls.SalariesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F4F6F9"
             d:DesignHeight="600" d:DesignWidth="950"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- ظل لجميع البلوكات -->
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Black"/>
        <!-- DatePicker -->
        <Style x:Key="BeautifulDatePicker" TargetType="DatePicker">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <!-- TextBox Style -->
        <Style x:Key="BeautifulTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2E3A59"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="BeautifulComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderBrush" Value="#D0D7E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="BeautifulButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
           
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🟦 العنوان -->
        <TextBlock Text="إدارة الرواتب الشهرية"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#1E293B"
                   Margin="0,0,0,20"/>

        <!-- 🟩 منطقة الإدخال -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,20" Effect="{StaticResource DropShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- الموظف -->
                <StackPanel Margin="5">
                    <TextBlock Text="الموظف:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="EmployeeComboBox" Style="{StaticResource BeautifulComboBox}" 
                              DisplayMemberPath="Name" SelectedValuePath="Id" SelectionChanged="EmployeeComboBox_SelectionChanged"/>
                </StackPanel>

                <!-- الشهر -->
                <StackPanel  Margin="5" Grid.Column="1">
                    <TextBlock Text="التاريخ:" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpBirthDate" Style="{StaticResource BeautifulDatePicker}" SelectedDateChanged="dpBirthDate_SelectedDateChanged"/>
                </StackPanel>

                <!-- السنة -->
                
                <!-- الراتب الأساسي -->
                <StackPanel Margin="5" Grid.Column="3">
                    <TextBlock Text="الراتب الأساسي:" FontWeight="SemiBold"/>
                    <TextBox x:Name="BasicSalaryTextBox" Style="{StaticResource BeautifulTextBox}"/>
                </StackPanel>

                <!-- المكافأة -->
                <StackPanel Margin="5" Grid.Column="4">
                    <TextBlock Text="المكافأة:" FontWeight="SemiBold"/>
                    <TextBox x:Name="BonusTextBox" Style="{StaticResource BeautifulTextBox}"/>
                </StackPanel>

                <!-- الخصم -->
                <StackPanel Margin="5" Grid.Column="5">
                    <TextBlock Text="الخصم:" FontWeight="SemiBold"/>
                    <TextBox x:Name="DeductionTextBox" Style="{StaticResource BeautifulTextBox}"/>
                </StackPanel>

                <!-- الأزرار -->
                <StackPanel Orientation="Horizontal" Grid.Column="6" VerticalAlignment="Bottom" Margin="10,0,0,0">
                    <Button Content="💾 حفظ" Background="#16A34A" Style="{StaticResource BeautifulButton}" Click="SaveButton_Click"/>
                    <Button Content="🧹 مسح" Background="#DC2626" Style="{StaticResource BeautifulButton}" Click="ClearButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 🟨 الجدول -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="10" Effect="{StaticResource DropShadow}">
            <DataGrid x:Name="SalariesDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F1F5F9"
                      RowHeight="35"
                      HeadersVisibility="Column"
                      BorderBrush="#E1E5EE" Loaded="SalariesDataGrid_Loaded" SelectionChanged="SalariesDataGrid_SelectionChanged">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2563EB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.Resources>

                
                <!-- Context Menu -->
                <DataGrid.ContextMenu>
                    <ContextMenu Background="WhiteSmoke" 
                     BorderBrush="#2563EB" 
                     BorderThickness="1" 
                     FontSize="14"
                     FontWeight="SemiBold"
                     Padding="5">
                     <MenuItem Header="✏️ تعديل" Click="EditMenuItem_Click"
                     Background="White" Foreground="#1E293B"
                     Padding="5,2"/>
                     <MenuItem Header="🗑 حذف" Click="DeleteMenuItem_Click"
                      Background="White" Foreground="#DC2626"
                      Padding="5,2"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Border>

        <!-- 🟦 أزرار التحكم -->
    </Grid>
</UserControl>
