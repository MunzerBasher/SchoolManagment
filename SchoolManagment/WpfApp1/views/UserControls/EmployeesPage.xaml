<UserControl x:Class="School.views.UserControls.EmployeesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="#F8F9FA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 🟦 إدخال البيانات -->
            <RowDefinition Height="Auto"/>
            <!-- 🟩 شريط البحث -->
            <RowDefinition Height="*"/>
            <!-- 🟨 الجدول -->
        </Grid.RowDefinitions>

        <!-- ✅ قسم إدخال بيانات الموظفين -->
        <GroupBox Header="بيانات الموظف" FontWeight="Bold" Margin="0,0,0,20" Padding="10" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- الصف الأول -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                    <TextBlock Text="الاسم الكامل:"/>
                    <TextBox x:Name="txtFullName"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                    <TextBlock Text="الرقم الوظيفي:"/>
                    <TextBox x:Name="txtEmployeeID"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                    <TextBlock Text="الجنس:"/>
                    <ComboBox x:Name="cmbGender">
                        <ComboBoxItem Content="ذكر"/>
                        <ComboBoxItem Content="أنثى"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3" Grid.Row="0" Margin="5">
                    <TextBlock Text="تاريخ الميلاد:"/>
                    <DatePicker x:Name="dpBirthDate"/>
                </StackPanel>

                <!-- الصف الثاني -->
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="5">
                    <TextBlock Text="رقم الهاتف:"/>
                    <TextBox x:Name="txtPhone"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
                    <TextBlock Text="البريد الإلكتروني:"/>
                    <TextBox x:Name="txtEmail"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="1" Margin="5">
                    <TextBlock Text="الوظيفة:"/>
                    <ComboBox x:Name="cmbJobTitle">
                        <ComboBoxItem Content="محاسب"/>
                        <ComboBoxItem Content="سكرتير"/>
                        <ComboBoxItem Content="فني مختبر"/>
                        <ComboBoxItem Content="مدير إداري"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="3" Grid.Row="1" Margin="5">
                    <TextBlock Text="القسم:"/>
                    <ComboBox x:Name="cmbDepartment">
                        <ComboBoxItem Content="الشؤون الإدارية"/>
                        <ComboBoxItem Content="المالية"/>
                        <ComboBoxItem Content="الصيانة"/>
                        <ComboBoxItem Content="الموارد البشرية"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- ✅ شريط البحث -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <TextBox x:Name="txtSearch" Width="200" Margin="0,0,5,0"/>
            <Button Content="بحث" Width="80" Background="#0078D7" Foreground="White"/>
        </StackPanel>

        <!-- ✅ جدول عرض الموظفين -->
        <DataGrid Grid.Row="2" x:Name="dgEmployees"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#F1F3F4"
                  RowHeight="35"
                  HeadersVisibility="Column"
                  Margin="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="الرقم" Binding="{Binding EmployeeID}" Width="80"/>
                <DataGridTextColumn Header="الاسم الكامل" Binding="{Binding FullName}" Width="200"/>
                <DataGridTextColumn Header="الجنس" Binding="{Binding Gender}" Width="100"/>
                <DataGridTextColumn Header="الهاتف" Binding="{Binding Phone}" Width="150"/>
                <DataGridTextColumn Header="البريد الإلكتروني" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="الوظيفة" Binding="{Binding JobTitle}" Width="150"/>
                <DataGridTextColumn Header="القسم" Binding="{Binding Department}" Width="150"/>
                <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
