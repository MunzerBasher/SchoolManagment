<UserControl x:Class="School.views.UserControls.ClassSectionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#F9FAFB"
             d:DesignHeight="800" d:DesignWidth="1100"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          BlurRadius="10"
                          ShadowDepth="2"
                          Opacity="0.3"
                          Color="#44000000"/>
    </UserControl.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🟦 العنوان -->
        <TextBlock Text="📘 إدارة الشعب الصفّية"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#1E293B"
                   Margin="0,0,0,20"/>

        <!-- 🟩 الإدخال -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="20"
                Margin="0,0,0,15"
                Effect="{StaticResource DropShadow}">
            <StackPanel>
                <!-- 🧾 الحقول -->
                <UniformGrid Columns="4" Rows="2" Margin="0,0,0,5">
                    <StackPanel Margin="5">
                        <TextBlock Text="العام الدراسي:" FontWeight="SemiBold" Foreground="#334155"/>
                        <ComboBox x:Name="cbAcademicYear" Width="180" Height="35"
                                  Background="#F9FAFB" BorderBrush="#CBD5E1"
                                  DisplayMemberPath="Name" SelectedValuePath="Id" SelectionChanged="cbAcademicYear_SelectionChanged"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="الفصل الدراسي:" FontWeight="SemiBold" Foreground="#334155"/>
                        <ComboBox x:Name="cbSemester" Width="180" Height="35"
                                  Background="#F9FAFB" BorderBrush="#CBD5E1"
                                  DisplayMemberPath="Name" SelectedValuePath="Id" SelectionChanged="cbSemester_SelectionChanged"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="المرحلة الدراسية:" FontWeight="SemiBold" Foreground="#334155"/>
                        <ComboBox x:Name="cbStage" Width="180" Height="35"
                                  Background="#F9FAFB" BorderBrush="#CBD5E1"
                                  DisplayMemberPath="Name" SelectedValuePath="Id" SelectionChanged="cbStage_SelectionChanged"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="الصف الدراسي:" FontWeight="SemiBold" Foreground="#334155"/>
                        <ComboBox x:Name="cbClass" Width="180" Height="35" DisplayMemberPath="Name" SelectedValuePath="Id"
                                  Background="#F9FAFB" BorderBrush="#CBD5E1" SelectionChanged="cbClass_SelectionChanged"/>
                    </StackPanel>
                </UniformGrid>

                <!-- 🆕 اسم الشعبة + الأزرار موازية -->
                <StackPanel Orientation="Horizontal"
                            Margin="5,5,0,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                    <StackPanel Margin="0,0,10,0">
                        <TextBlock Text="اسم الشعبة:" FontWeight="SemiBold" Foreground="#334155"/>
                        <TextBox x:Name="txtSectionName"
                                 Width="250"
                                 Height="35"
                                 Background="#F9FAFB"
                                 BorderBrush="#CBD5E1"/>
                    </StackPanel>

                    <Button Content="➕ إضافة شعبة"
                            Width="150" Height="35"
                            Background="#2563EB"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Margin="10,20,0,0" Click="Button_Click"/>

                    <Button Content="🔄 تحديث"
                            Width="120" Height="35"
                            Background="#475569"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Margin="10,20,0,0" Click="Button_Click_1"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 🟨 البحث -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="12"
                Padding="15"
                Margin="0,0,0,10"
                Effect="{StaticResource DropShadow}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🔍 بحث بالاسم:" 
                           VerticalAlignment="Center"
                           Margin="0,0,10,0" 
                           FontWeight="SemiBold"
                           Foreground="#334155"/>
                <TextBox x:Name="txtSearch" 
                         Width="300" Height="35"
                         Background="#F9FAFB"
                         BorderBrush="#CBD5E1"/>
            </StackPanel>
        </Border>

        <!-- 🟦 الجدول -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="12"
                Padding="20"
                Effect="{StaticResource DropShadow}">
            <DataGrid x:Name="dgClassSections"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#F1F5F9"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      FontSize="14"
                      RowHeight="40"
                      BorderBrush="#E2E8F0"
                      BorderThickness="1"
                      SelectionMode="Single"
                      MinHeight="400" SelectionChanged="dgClassSections_SelectionChanged">
                <!-- 👈 رفع ارتفاع الجدول -->

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2563EB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="15"/>
                    </Style>

                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Foreground" Value="#334155"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.ContextMenu>
                    <ContextMenu Background="WhiteSmoke" 
                        BorderBrush="#2563EB" 
                        BorderThickness="1" 
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="5">
                        <MenuItem Header="✏️ تعديل" Click="EditMenuItem_Click"
                        Background="White" Foreground="#1E293B"
                        Padding="5,2"/>
                        <MenuItem Header="🗑 حذف" Click="DeleteMenuItem_Click"
                         Background="White" Foreground="#DC2626"
                         Padding="5,2"
                         />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
