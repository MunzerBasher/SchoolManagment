<UserControl x:Class="School.views.UserControls.FeesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F4F6F9"
             >
    <UserControl.Resources>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="Black"/>
        <Style x:Key="BeautifulTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="BeautifulButtonBlue" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="💳 إدارة الرسوم" FontSize="26" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,12"/>

        <!-- إدخال / تعديل رسوم -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="16" Margin="0,0,0,12" Effect="{StaticResource DropShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="6">
                    <TextBlock Text="الطالب (ID أو اسم):" FontWeight="SemiBold" Foreground="#334155"/>
                    <ComboBox x:Name="cbStudent" IsEditable="True" Height="34" Margin="0,6,0,0"/>
                </StackPanel>

                <StackPanel Margin="6" Grid.Column="1">
                    <TextBlock Text="نوع الرسوم:" FontWeight="SemiBold" Foreground="#334155"/>
                    <ComboBox x:Name="cbFeeType" Height="34" Margin="0,6,0,0" DisplayMemberPath="Name" SelectedValuePath="FeeTypeId"/>
                </StackPanel>

                <StackPanel Margin="6" Grid.Column="2">
                    <TextBlock Text="المبلغ:" FontWeight="SemiBold" Foreground="#334155"/>
                    <TextBox x:Name="txtAmount" Style="{StaticResource BeautifulTextBox}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Column="3" VerticalAlignment="Bottom" Margin="10,0,0,0">
                    <Button Content="حفظ" Width="110" Click="SaveFee_Click" Style="{StaticResource BeautifulButtonBlue}" />
                    <Button Content="مسح الحقول" Width="110" Click="ClearFields_Click" Margin="6,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- شريط البحث + دفعات -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="🔍 بحث:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="txtSearch" Width="260" Style="{StaticResource BeautifulTextBox}" TextChanged="SearchTextBox_TextChanged"/>
            <Button Content="عرض الكل" Click="RefreshButton_Click" Style="{StaticResource BeautifulButtonBlue}" Margin="10,0,0,0"/>
            <Button Content="دفعة" Click="MakePayment_Click" Margin="10,0,0,0" Background="#16A34A" Foreground="White" Width="120"/>
            <Button Content="عرض الدفعات" Click="ShowPayments_Click" Margin="10,0,0,0" Background="#475569" Foreground="White" Width="120"/>
        </StackPanel>

        <!-- جدول الرسوم -->
        <Border Grid.Row="3" Background="White" CornerRadius="10" Padding="12" Effect="{StaticResource DropShadow}">
            <DataGrid x:Name="dgFees"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      RowHeight="36"
                      AlternatingRowBackground="#F9FAFB"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionChanged="dgFees_SelectionChanged">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2563EB"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="42"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding FeeId}" Width="60"/>
                    <DataGridTextColumn Header="الطالب" Binding="{Binding StudentName}" Width="2*"/>
                    <DataGridTextColumn Header="نوع الرسوم" Binding="{Binding FeeTypeName}" Width="2*"/>
                    <DataGridTextColumn Header="المبلغ" Binding="{Binding Amount}" Width="100"/>
                    <DataGridTextColumn Header="مدفوع" Binding="{Binding PaidAmount}" Width="100"/>
                    <DataGridTextColumn Header="الباقي" Binding="{Binding RemainingAmount}" Width="100"/>
                    <DataGridTextColumn Header="تاريخ الاستحقاق" Binding="{Binding DueDate, StringFormat=d}" Width="140"/>
                    <DataGridTextColumn Header="الحالة" Binding="{Binding PaymentStatus}" Width="100"/>
                    <DataGridTemplateColumn Header="أوامر" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="✏️" Click="EditFee_Click" Tag="{Binding FeeId}" Width="40" Margin="2" />
                                    <Button Content="🗑" Click="DeleteFee_Click" Tag="{Binding FeeId}" Width="40" Margin="2" Background="#DC2626" Foreground="White"/>
                                    <Button Content="▶" Click="PaymentsForFee_Click" Tag="{Binding FeeId}" Width="40" Margin="2" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
