<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        Title="تسجيل الدخول"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Width="720" Height="800"
        
        mc:Ignorable="d">
    
    <Grid Margin="120">
        <Border CornerRadius="15" Background="White" Padding="10" 
                VerticalAlignment="Center" 
               >
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                <!-- العنوان -->
                <TextBlock Text="تسجيل الدخول" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2E86DE" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- اسم المستخدم -->
                <TextBlock Text="اسم المستخدم" Foreground="Gray" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" 
                         Height="35" 
                         Padding="10" 
                         Background="#F0F2F5" 
                         BorderThickness="0" 
                         />

                <!-- كلمة المرور -->
                <TextBlock Text="كلمة المرور" Foreground="Gray" Margin="0,15,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                             Height="35" 
                             Padding="10"
                             Background="#F0F2F5"
                             BorderThickness="0" 
                            />

                <!-- زر تسجيل الدخول -->
                <Button Content="تسجيل الدخول"
                        Height="40"
                        Background="#2E86DE"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,25,0,0"
                        BorderThickness="0"
                      
                        Cursor="Hand" Click="Button_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
